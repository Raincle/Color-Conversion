<view class="container">
  <!--<text class="instruction">请选择需要转换的格式</text>-->
  <text class="instruction" style="opacity:{{titleOpacity}}">测试</text>
  <scroll-view class="types-wrapper" scroll-x="true">
    <block wx:for="{{typeIcons}}">
      <view class="type" id="{{item}}" bindtap="bindChooseType" style="width:{{typeIconsUI.size}}px;height:{{typeIconsUI.size}}px;border-radius:{{typeIconsUI.size}}px;margin:{{typeIconsUI.margin[0]}}px {{typeIconsUI.margin[1]}}px">{{item}}</view>
    </block>
  </scroll-view>

  <view class="inputs-popup {{shouldShowInputs}}" bindtap="bindDismissInputs">
    <view class="inputs-wrapper" catchtap="catchStopPropagation">
      <text  class="inputs-wrapper-title">请输入需要转换的颜色</text>
      <view class="type-wrapper">

        <view class="sixteen" wx:if="{{currentType == 0}}">
        <text>#</text>
        <input value="{{sixteenValue}}" placeholder="ffffff" placeholder-style="color: lightgray;" maxlength="6" bindinput="onSixteenInput" />
        </view>

        <view class="rgba" wx:if="{{currentType == 1}}">
        <text>R</text>
        <input value="{{rValueOfRGBA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onROfRGBAInput" />
        <text>G</text>
        <input value="{{gValueOfRGBA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onGOfRGBAInput" />
        <text>B</text>
        <input value="{{bValueOfRGBA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onBOfRGBAInput" />
        <text>A</text>
        <text class="percent">%</text>
        <input value="{{aValueOfRGBA}}" placeholder="0~100" placeholder-style="color: lightgray;" maxlength="3" bindinput="onAOfRGBAInput" />
        </view>

        <view class="hlsa" wx:if="{{currentType == 2}}">
        <text>H</text>
        <input value="{{hValueOfHLSA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onHOfHLSAInput" />
        <text>L</text>
        <input value="{{lValueOfHLSA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onLOfHLSAInput" />
        <text>S</text>
        <input value="{{sValueOfHLSA}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onSOfHLSAInput" />
        <text>A</text>
        <text class="percent">%</text>
        <input value="{{aValueOfHLSA}}" placeholder="0~100" placeholder-style="color: lightgray;" maxlength="3" bindinput="onAOfHLSAInput" />
        </view>

        <view class="cmyk" wx:if="{{currentType == 3}}">
        <text>C</text>
        <input value="{{cValueOfCMYK}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onCOfCMYKInput" />
        <text>M</text>
        <input value="{{mValueOfCMYK}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onMOfCMYKInput" />
        <text>Y</text>
        <input value="{{yValueOfCMYK}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onYOfCMYKInput" />
        <text>K</text>
        <text class="percent">%</text>
        <input value="{{kValueOfCMYK}}" placeholder="0~100" placeholder-style="color: lightgray;" maxlength="3" bindinput="onKOfCMYKInput" />
        </view>

        <view class="lab" wx:if="{{currentType == 4}}">
        <text>L</text>
        <input value="{{lValueOfLAB}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onLOfLABInput" />
        <text>A</text>
        <text class="percent">%</text>
        <input value="{{aValueOfLAB}}" placeholder="0~100" placeholder-style="color: lightgray;" maxlength="3" bindinput="onAOfLABInput" />
        <text>B</text>
        <input value="{{bValueOfLAB}}" placeholder="0~255" placeholder-style="color: lightgray;" maxlength="3" bindinput="onBOfLABInput" />
        </view>


        <view class="action-btn">
          <text class="btn-text">好了</text>
        </view>
      </view>

    </view>
  </view>
  <scroll-view class="results-wrapper" style="height: {{resultsWrapperHeight}}px">

  </scroll-view>
</view>