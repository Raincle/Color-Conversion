.instruction {
  height: 24px;
  line-height: 24px;
  padding: 16px 0;
}

.types-wrapper {
  white-space: nowrap;   
  display: flex;
  width: 100%;
  height: 100px;
  margin: 16px 0;
  background-color: lightyellow;
}

.type {
  display: inline-block;
  background-color: lightgray;
}

.inputs-popup {
  display: none;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,0.3);
  z-index: 10;
}
.show-inputs-wrapper {
  display: block;
}
.hide-inputs-wrapper {
  display: none;
}

.inputs-wrapper {
  position: absolute;
  top: 56px;
  bottom: 80px;
  left: 40px;
  right: 40px;
  border-radius: 8px;
  background-color: white;
}

.inputs-wrapper text {
  position: absolute;
  text-align: center;
  width: 100%;
  line-height: 24px;
  color: white;
  top: -40px;
  left: 0;
}
 
.results-wrapper {
  margin-top: 16px;
  background-color: lightyellow;
}