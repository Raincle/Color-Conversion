.instruction {
  height: 24px;
  line-height: 24px;
  padding: 16px 0;
}

.types-wrapper {
  white-space: nowrap;   
  display: flex;
  width: 100%;
  height: 100px;
  margin: 16px 0;
  background-color: lightyellow;
}

.type {
  display: inline-block;
  background-color: lightgray;
}

.inputs-wrapper {
  display: none;
  position: absolute;
  width: 80%;
  height: 300px;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background-color: pink;
}

.results-wrapper {
  margin-top: 16px;
  background-color: lightyellow;
}