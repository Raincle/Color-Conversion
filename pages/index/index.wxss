.instruction {
  height: 24px;
  line-height: 24px;
  padding: 16px 0;
}

.types-wrapper {
  white-space: nowrap;   
  display: flex;
  width: 100%;
  height: 100px;
  margin: 16px 0;
  background-color: lightyellow;
}

.type {
  display: inline-block;
  background-color: lightgray;
}

.inputs-popup {
  display: none;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,0.3);
  z-index: 10;
}
.show-inputs-wrapper {
  display: block;
}
.hide-inputs-wrapper {
  display: none;
}

.inputs-wrapper {
  position: absolute;
  top: 56px;
  bottom: 80px;
  left: 40px;
  right: 40px;
  border-radius: 8px;
  background-color: white;
}

.inputs-wrapper .inputs-wrapper-title {
  position: absolute;
  text-align: center;
  width: 100%;
  line-height: 24px;
  color: white;
  top: -40px;
  left: 0;
}

.type-wrapper {
  position: absolute;
  width: 200px;
  height: auto;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

.type-wrapper .action-btn {
  position: absolute;
  width: 48px;
  height: 48px;
  border-radius: 48px;
  bottom: -100px;
  left: 50%;
  border: 1px solid springgreen;
  transform: translate(-50%, -50%);
}

.type-wrapper .action-btn .btn-text {
  display: block;
  position: relative;
  width: 100%;
  height: 100%;
  line-height: 48px;
  text-align: center;
  color: springgreen;
}
 
 /*sixteen*/
.type-wrapper .sixteen {
  width: 100%;
  height: auto;
}

.type-wrapper .sixteen text {
  position: absolute;
  font-size: 24px;
  width: 40px;
  height: 64px;
  line-height: 64px;
  text-align: center;
}

.type-wrapper .sixteen input {
  border-radius: 4px;
  font-size: 24px;
  font-weight: bolder;
  line-height: 64px;
  border: 1px solid lightgray;
